<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/haritha"
    tools:context="com.example.dheeraj.smartmessagetracking.MainProcess">


    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/sendbutton"
        android:layout_alignRight="@+id/sendbutton"
        android:layout_alignTop="@+id/contact"
        android:background="@drawable/shape"
        android:hint="Phonenumber"
        android:inputType="phone"
        android:paddingLeft="14dp"
        android:paddingStart="14dp" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp"
        android:src="@drawable/contactsimg" />

    <EditText
        android:id="@+id/textmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sendbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:visibility="invisible"
        android:hint=" Enter your MESSAGE" />

    <Button
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phonenumber"
        android:layout_marginTop="78dp"
        android:text="GET LOCATION"
        android:textSize="18sp"
        android:visibility="invisible"
        />


    <Button
        android:id="@+id/sendbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/buttonshape"
        android:text="send" />









</RelativeLayout>
